<?xml version="1.0"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">

	<xs:element name="trains">
		<xs:complexType>
			<xs:choice maxOccurs="unbounded">
				<xs:element name="train" maxOccurs="unbounded">
					<xs:complexType>
						<xs:all>
							<xs:element name="id" type="xs:string"/>
							<xs:element name="seats" type="xs:nonNegativeInteger"/>
						</xs:all>
                        <xs:attribute name="version" type="xs:positiveInteger"/>
					</xs:complexType>
				</xs:element>
			</xs:choice>
		</xs:complexType>
	</xs:element>

</xs:schema>